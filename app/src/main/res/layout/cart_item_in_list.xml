<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/grid_item_background"
    android:layoutDirection="rtl">


    <!-- Product Image (most right) -->
    <ImageView
        android:id="@+id/cartItemImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_background"
        android:layout_gravity="end" />
    <!-- Product Name and Description (left side content) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingRight="10dp">

        <!-- Product Name -->
        <TextView
            android:id="@+id/cartItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Product Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000" />

        <!-- Product Description -->
        <TextView
            android:id="@+id/cartItemDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Product Description"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/text_secondary" />

        <!-- Product Price -->
        <TextView
            android:id="@+id/cartItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Price: â‚¹0"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#4CAF50" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <!-- Quantity Controls (right side) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:layoutDirection="ltr"
            >

            <!-- Decrease Button -->
            <ImageButton
                android:id="@+id/decreaseQuantityButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_remove_circle_24"
                android:layout_marginEnd="5dp"
                android:background="?android:attr/selectableItemBackground" />

            <!-- Quantity Text -->
            <TextView
                android:id="@+id/quantityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginEnd="5dp" />

            <!-- Increase Button -->
            <ImageButton
                android:id="@+id/increaseQuantityButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_add_circle_24"
                android:background="?android:attr/selectableItemBackground" />
        </LinearLayout>

        <!-- Delete Button (Below Quantity) -->
        <ImageButton
            android:id="@+id/deleteItemButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_delete_24"
        android:layout_marginTop="10dp" />
    </LinearLayout>


</LinearLayout>
